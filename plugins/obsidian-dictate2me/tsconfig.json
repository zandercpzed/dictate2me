{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"skipLibCheck": true
	},
	"include": [
		"**/*.ts"
	]
}
